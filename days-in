#!/usr/bin/env bash

y=${1:-`date +%Y`}
for i in {1..12}; do cal -m $i $y ;done  |
	grep -E -v -e Mo -e '^\s+$' -e $y |
	sed -E 's/\ ([0-9](\ |$))/0\1/g'  | tee /tmp/days-in-$1 >/dev/stderr

vim -s <( cat <<ZZ
gg
0
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
/\(28\|29\|30\|31\)\ \+$
J
:wq
ZZ
) /tmp/days-in-$1

echo ============= >/dev/stderr
cat -n /tmp/days-in-$1




