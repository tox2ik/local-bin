timeo=1800
sshfs root@mko2:/T/_ativ/htdocs /var/www/mko/htdocs \
	-o nonempty -o ssh_command='ssh -c blowfish' \
	-o large_read -o big_writes \
	-o auto_cache -o kernel_cache \
	-o remember=$timeo \
	-o cache_stat_timeout=$timeo \
	-o cache_dir_timeout=$timeo \
	-o cache_link_timeout=$timeo

#-f -o sshfs_debug
