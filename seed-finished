#!/bin/bash

function verb { if [[ $be_verbose -eq 1 ]]; then echo -e "$@" >&2; fi; }


function is_done {
	#if [[ -f "$torr_fin" ]] || [[ $size_match -eq 1 ]]; then
	if [[ -f "$torr_fin" ]]; then
		return 0
	fi
	return 1
}


#size_match=0
#{
#ctorrent -x "$torr" | awk '
#		$1 == "Directory:" { sub("Directory: ", "", $0); d=$0   }
#		$1 ~ /<[0-9]+>/ { print d "/" $2 }
#		' | tr '\n' '\0' |
#		xargs -r0 du -B1 2>/dev/null | tr '\t' ' '
#echo
#ctorrent -x "$torr" | awk '
#		$1 == "Directory:" { sub("Directory: ", "", $0); d=$0   }
#		$1 ~ /<[0-9]+>/ { gsub("[][]", "", $3); fs[$1]=$3 }
#		$1 ~ /<[0-9]+>/ { print fs[$1] " " d "/" $2 }
#		'
#} | awk '{ _[$0]++ } END {
